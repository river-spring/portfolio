<div class="body">
  <div class="container">
    <div class="row">
      <section class="log-in col-xs-3">
        <h2 class="log-in__title">ログイン</h2>
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :ユーザーID %><br />
              <%= f.text_field :user_id, autofocus: true, autocomplete: "user_id", class: "log-in__form form-control" %>
            </div>

            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "log-in__form form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: "btn log-in__btn" %>
            </div>
          <% end %>
        </div>

        <%= render "users/shared/links" %>
      </section>
    </div>
  </div>
</div>
